int* transformArray(int* nums, int numsSize, int* returnSize) {
    int zerocounter=0;

    for(int i=0;i<numsSize;i++){
        if(nums[i]%2==0){
            nums[i]=0;
        }
        else{
            nums[i]=1;
        }
    }
    for (int j=0;j<numsSize;j++){
        if(nums[j]==0){
            zerocounter++;
        }
    }
    for(int k=0;k<numsSize;k++){
        if(zerocounter!=0){
        nums[k]=0;
        zerocounter--;
        }
        else{
            nums[k]=1;
        }
    }
    *returnSize=numsSize;
    return nums;
}
