
int* shuffle(int* nums, int numsSize, int n, int* returnSize){
    int arr[numsSize];
    int *ptr1=&nums[0];
    int *ptr2 = &nums[n];
    int j = 0;
    for (int i = 0; i < n; i++) {
        arr[j++] = *ptr1++;
        arr[j++] = *ptr2++;
    }

    for(int k=0;k<(2*n);k++){
        nums[k]=arr[k];
    }
    *returnSize=numsSize;
    return nums;
}
